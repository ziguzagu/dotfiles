-pbp      # start with perl best practice style
-w        # show warnings
-l=100    # max line width
-iob      # ignore old breakpoints
-mbl=2    # no more than 2 blank lines
-vt=2     # maximal vertical tightness
-bvt=2
-pt=2     # no spaces within parens
-sbt=2    # no spaces within square brackets
-bt=2     # no spaces within braces
-bbt=0    # a space within block brace
-sot      # stack opening token
-sct      # stack closing token
-otr
