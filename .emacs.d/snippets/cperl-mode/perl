# name : perl
# --
#!/usr/bin/env perl
use strict;
use warnings;
use utf8;

use Getopt::Long qw( :config posix_default no_ignore_case gnu_compat auto_help );
use Pod::Usage;

GetOptions(\my %opt, qw( h|help )) or pod2usage(1);

$0

__END__

=pod

=head1 NAME

`(buffer-name)` - 

=head1 SYNOPSIS

  $ `(buffer-name)` [options]

=cut
