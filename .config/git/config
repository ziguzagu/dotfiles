	email = ziguzagu@gmail.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIPsrU5HoiwMITvf1nu7wfch+ramjVy3ucEbaGZPoPode

[color "diff"]
	meta = 248 italic
	frag = 74 italic
	func = 140 no-bold italic
	new  = 107
	old  = 167
	whitespace = white bold reverse

[color "status"]
	updated   = 107
	changed   = 167
	untracked = 75

[color "branch"]
	current  = 107
	local    = 254
	remote   = 110
	upstream = 183
	plain    = 248

[color "grep"]
	filename   = 251 238 italic
	linenumber = 74 no-bold
	separator  = 74 no-bold
	function   = 140 no-bold italic
	match      = 214 bold

[core]
	whitespace = trailing-space
	pager      = delta

[diff]
	algorithm = histogram
	colorMoved = default

[grep]
	patternType = perl

[merge]
	conflictStyle = zdiff3

[rerere]
	enabled = true

[gpg]
	format = ssh

[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
	allowedSignersFile = ~/.config/git/allowed_signers

[commit]
	verbose = true
	gpgSign = true

[tag]
	gpgSign = true

[interactive]
	diffFilter = delta --color-only

[alias]
	aliases = !git config --get-regexp "alias\\." | perl -pe 's/^alias\\.(\\S+)\\s*/$1 = /'
	up = !git pull --rebase && git submodule update --init
	di = diff
	dc = diff --cached
	ci = commit
	st = status -s
	co = checkout
	pick = cherry-pick
	br = branch
	sw = switch
	ls = ls-files
	discard = restore
	amend = ci --amend --no-edit
	unstage = reset HEAD --
	uncommit = reset HEAD~
	last = log -1 HEAD
	url = config --get remote.origin.url
	publish = !git push -u origin $(git current-branch)
	unpublish = !git push origin :$(git current-branch)
	upstream = !git rev-parse --abbrev-ref --symbolic-full-name @{u} 2>/dev/null
	s = grep --heading --break --line-number --color=auto
	current-branch = branch --show-current
	default-branch = !basename $(git symbolic-ref --short refs/remotes/$(git remote | grep upstream || echo 'origin')/HEAD)
	history = log --pretty='format:%C(green)%cs%C(reset) %C(yellow)%h%C(reset) %C(white bold)%<(12,trunc)%an%C(reset) %s'

[push]
	default = simple

[rebase]
	autostash = true

[fetch]
	prune = true
	parallel = 0  # auto-detect based on CPU cores

[checkout]
	defaultRemote = origin

[ghq]
	root = ~/src

[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true

[init]
	defaultBranch = main

[include]
	path = ~/.config/git/config.local
