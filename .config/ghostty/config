confirm-close-surface = false

cursor-style = block
shell-integration-features = no-cursor

font-family = Moralerspace Argon
adjust-cell-height = 1
alpha-blending = linear

font-feature = -calt
font-feature = -dlig
font-feature = -liga

# set window to about 40% width and maximum height of my main display (DELL P2223HC)
window-width = 99
window-height = 59

macos-option-as-alt = true

# keybinds for Emacs
keybind = cmd+,=esc:,
keybind = cmd+.=esc:.
keybind = cmd+/=esc:/
keybind = cmd+d=esc:d
keybind = cmd+g=esc:g
keybind = cmd+n=esc:n
keybind = cmd+o=esc:o
keybind = cmd+p=esc:p
keybind = cmd+shift+,=esc:<
keybind = cmd+shift+.=esc:>
keybind = cmd+w=esc:w
keybind = cmd+x=esc:x
keybind = ctrl+m=text:\n

# to add newlines in claude code
keybind = shift+enter=text:\x1b\r
