confirm-close-surface = false

cursor-style = block
shell-integration-features = no-cursor

font-feature = -calt

# set window to about 40% width and maximum height of my main display (DELL P2223HC)
window-width = 96
window-height = 56

macos-option-as-alt = true

# keybinds for eamcs using cmd as meta
keybind = cmd+,=esc:,
keybind = cmd+.=esc:.
keybind = cmd+/=esc:/
keybind = cmd+d=esc:d
keybind = cmd+n=esc:n
keybind = cmd+o=esc:o
keybind = cmd+p=esc:p
keybind = cmd+shift+,=esc:<
keybind = cmd+shift+.=esc:>
keybind = cmd+w=esc:w
keybind = cmd+x=esc:x
