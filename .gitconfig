## -*- mode: conf -*-
[user]
name = ziguzagu
email = ziguzagu@gmail.com

[color]
ui = auto

[color "diff"]
meta = yellow
frag = blue bold
whitespace = white bold reverse

[color "status"]
untracked = blue bold

[color "branch"]
current = green bold
local = yellow
remote = magenta

[core]
excludesfile = ~/.gitignore
whitespace = trailing-space

[alias]
up = pull --rebase
di = diff
dc = diff --cached
ci = commit -v
st = status -sb
co = checkout
pick = cherry-pick
br = branch
hist = log --graph --pretty=format:'%C(blue bold)%h%C(cyan)%d%Creset %s %C(black bold)(%ci)%Creset' --decorate
last = log -1 HEAD
info = config --get remote.origin.url
upstream = "!sh -c 'git rev-parse --abbrev-ref --symbolic-full-name @{u} 2>/dev/null'"
remaster = "!sh -c 'branch=`git rev-parse --abbrev-ref HEAD` && git co master && git pull origin master && git co $branch && git rebase master"
## for hub
web = browse
pr  = pull-request

[push]
default = current

[include]
path = .gitconfig.local
