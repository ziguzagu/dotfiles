## -*- mode: conf -*-
[user]
name = ziguzagu
email = ziguzagu@gmail.com

[color]
ui = auto

[color "diff"]
meta = yellow
frag = blue bold
whitespace = white bold reverse

[color "status"]
untracked = blue bold

[color "branch"]
current = green bold
local = yellow
remote = magenta

[color "grep"]
filename   = green
linenumber = blue bold
function   = cyan
match      = red ul

[core]
excludesfile = ~/.gitignore
whitespace   = trailing-space
pager        = diff-so-fancy | less -FX

# https://help.github.com/en/github/using-git/caching-your-github-password-in-git
[credential]
helper = osxkeychain

[diff]
indentHeuristic = true

[grep]
patternType = perl

[commit]
verbose = true

[diff-so-fancy]
stripLeadingSymbols = false

# XXX: git 2.17.0 doens't work well with this.
# see https://github.com/so-fancy/diff-so-fancy/issues/35
# [interactive]
# diffFilter = diff-so-fancy

[alias]
up = !git pull --rebase && git submodule update --init --recursive
di = diff
dc = diff --cached
ci = commit -v
st = status -sb
co = checkout
pick = cherry-pick
br = branch
sw = switch
cs = ci-status -v
undo = restore
amend = ci --amend --no-edit
unstage = reset HEAD --
uncommit = reset HEAD~
last = log -1 HEAD
url = config --get remote.origin.url
current = branch --show-current
default = !basename $(git symbolic-ref --short refs/remotes/origin/HEAD)
publish = !git push -u origin $(git current)
unpublish = !git push origin :$(git current)
upstream = !git rev-parse --abbrev-ref --symbolic-full-name @{u} 2>/dev/null
q = grep --heading --break --line-number --color --show-function
prune-branch = !git branch --merged | grep -v '\\* ' | xargs -n 1 git branch -d

[push]
default = current

[rebase]
autostash = true

[fetch]
prune = true

[checkout]
defaultRemote = origin

[ghq]
root = ~/src

[filter "hawser"]
clean = git hawser clean %f
smudge = git hawser smudge %f
required = true

[filter "lfs"]
clean = git lfs clean %f
smudge = git lfs smudge %f
required = true
