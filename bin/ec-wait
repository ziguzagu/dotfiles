#!/bin/sh

server_window=~/.emacs.d/emacs-server-window
client_window=~/.emacs.d/emacs-client-window

if [ -n "$TMUX" ]; then
    tmux display -p '#I' > $client_window
    tmux select-window -t `cat $server_window`
elif [ -n "$WINDOW" ]; then
    echo $WINDOW > $client_window
    screen -X select `cat $server_window`
fi

emacsclient $*
